<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:paddingHorizontal="50dp"
    android:layout_height="match_parent"
    tools:context=".fragment.timer.TimerAlertActivity">

    <ImageView
        android:contentDescription="timer icon"
        android:src="@drawable/clock"
        android:layout_width="match_parent"
        android:layout_above="@id/timer_view"
        android:layout_height="200dp"
        android:layout_marginBottom="70dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/timer_view"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:layout_above="@id/stop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="@color/white"
        android:text="@string/pause"
        android:background="@drawable/background_with_border"
        android:id="@+id/stop_button"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>